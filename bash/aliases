# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias dir='dir --color=auto'
    alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# ls
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# cd
alias ..='cd ..'
alias cdd='cd -'

# Edit aliases and reload them
alias reload='source ~/bin/dotfiles/bash/aliases'
alias ea='vim ~/bin/dotfiles/bash/aliases && reload'

# Rails
alias be='bundle exec'
alias rspec='be rspec -c'
alias rails='be rails'
alias rake='be rake'

# Git
alias gst='git status'

# Vim
alias vi='vim'
alias v='nvim'

alias psg='ps aux | grep'

alias ccf='xclip -sel clip <'

alias mvn='mvnDebug'


dot=$HOME/bin/dotfiles
jch=$HOME/Projects/chara.vip
kindergarten=$HOME/Projects/kindergarten
blower=$HOME/Projects/redux-blower
krtek=$HOME/Projects/krtek

# AppDirect
ad=$HOME/Projects/AppDirect/appdirect-parent/appdirect
kraken=$HOME/Projects/frontend-components
uif=$HOME/Projects/uif-sass
customizerthemes=$HOME/Projects/customizer-themes
